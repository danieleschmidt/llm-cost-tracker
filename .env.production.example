# Production Environment Variables for Quantum Task Planner
# Copy this file to .env.production and update the values

# === CORE APPLICATION ===
API_PORT=8000
LOG_LEVEL=INFO
ENABLE_DEBUG=false
PYTHONPATH=/app

# === DATABASE ===
POSTGRES_PASSWORD=your_very_secure_postgres_password_here
DATABASE_URL=postgresql://quantum_user:${POSTGRES_PASSWORD}@postgres:5432/quantum_db

# === CACHE & MESSAGING ===
REDIS_PASSWORD=your_very_secure_redis_password_here
REDIS_URL=redis://redis:6379/0

# === MONITORING & OBSERVABILITY ===
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=your_very_secure_grafana_password_here
ALERTMANAGER_PORT=9093
PROMETHEUS_ENDPOINT=http://prometheus:9090
GRAFANA_ENDPOINT=http://grafana:3000
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317

# === FEATURES ===
MONITORING_ENABLED=true
CACHE_ENABLED=true
LOAD_BALANCING_ENABLED=true
AUTO_SCALING_ENABLED=true
CIRCUIT_BREAKER_ENABLED=true
SECURITY_HEADERS_ENABLED=true
RATE_LIMITING_ENABLED=true

# === INTERNATIONALIZATION ===
I18N_DEFAULT_LANGUAGE=en
I18N_SUPPORTED_LANGUAGES=en,es,fr,de,ja,zh

# === COMPLIANCE & PRIVACY ===
COMPLIANCE_REGIONS=eu_gdpr,us_ccpa
DATA_RETENTION_DAYS=365
PII_ANONYMIZATION_METHOD=hash
CONSENT_REQUIRED=true
DATA_CONTROLLER="Your Organization Name"
DATA_PROCESSOR="Your Organization Name"

# === SECURITY ===
JWT_SECRET_KEY=your_very_secure_jwt_secret_key_here_minimum_32_characters
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# === SSL/TLS ===
ACME_EMAIL=admin@your-domain.com
SSL_CERT_PATH=/etc/ssl/certs/quantum-planner.crt
SSL_KEY_PATH=/etc/ssl/private/quantum-planner.key

# === DOMAINS (for Traefik) ===
API_DOMAIN=api.quantum-planner.local
GRAFANA_DOMAIN=grafana.quantum-planner.local
PROMETHEUS_DOMAIN=prometheus.quantum-planner.local
TRAEFIK_DOMAIN=traefik.quantum-planner.local
ALERTS_DOMAIN=alerts.quantum-planner.local

# === BACKUP & STORAGE ===
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=quantum-planner-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# === NOTIFICATION ===
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
EMAIL_SMTP_HOST=smtp.your-domain.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=alerts@your-domain.com
EMAIL_SMTP_PASSWORD=your_email_password
EMAIL_FROM=alerts@your-domain.com
EMAIL_TO=admin@your-domain.com

# === THIRD-PARTY INTEGRATIONS ===
# OpenAI API (if using OpenAI for task descriptions)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# DataDog for additional monitoring
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key

# === PERFORMANCE TUNING ===
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS_PER_WORKER=1000
WORKER_TIMEOUT=30
KEEP_ALIVE=2

# Database connection pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Cache settings
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=60

# === RESOURCE LIMITS ===
MAX_TASK_COUNT=10000
MAX_CONCURRENT_TASKS=100
MAX_TASK_DURATION_HOURS=24
MAX_MEMORY_PER_TASK_MB=512
MAX_CPU_PER_TASK=2.0

# === DEVELOPMENT/TESTING (Production should be false) ===
ENABLE_API_DOCS=false
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECKS=true
ENABLE_PROFILING=false
ENABLE_MOCK_DATA=false

# === TIMEZONE ===
TZ=UTC